{
  "mcpServers": {
    "shadcn-registry": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@reuvenorg/shadcn-registry-manager"
      ],
      "env": {
        "WORKSPACE_DIR": "/Users/your-user/path/to/gnars-website",
        "STYLE": "new-york",
        "REGISTRY_URL": "https://ui.shadcn.com/r"
      }
    },
    "gnars-subgraph": {
      "type": "stdio",
      "command": "node",
      "args": [
        "./mcp-subgraph/dist/index.js"
      ],
      "env": {
        "DATABASE_PATH": "./mcp-subgraph/data/gnars.db",
        "PRIVATE_KEY": "",
        "BASE_RPC_URL": "https://mainnet.base.org"
      }
    },
    "shadcn": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    }
  }
}
